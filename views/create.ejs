<%- include('header') %>
<div class="ui grid">
    <div class="four wide column">
        <a class="avatar"
        href="/posts?author=<%= user._id %>"
        data-title="<%= user.name %> | <%= ({m:'male',f:'female',x:'not specified'})[user.gender] %>"
        data-content="<%= user.bio %>">
        <img src="/img/<%= user.avatar %>" alt="Avatar" class="avatar"></a>
    </div>
    <div class="eight wide column">
        <form method="post" class="ui form segment" action="/posts">
            <div class="field required">
                <label>Title</label>
                <input type="text" name="title">
            </div>
            <div class="field required">
                <label>Content</label>
                <textarea name="content" rows="15"></textarea>
            </div>
            <input type="submit" value="post" class="ui button">
        </form>
    </div>
</div>
<%- include('footer') %>